<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:descendantFocusability = "blocksDescendants"
    android:minHeight="?android:attr/listPreferredItemHeightLarge">

    <TextView
        android:id="@+id/contract_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        android:layout_toStartOf="@+id/contract_deny"
        android:layout_toLeftOf="@+id/contract_deny"
        android:text="Hello"
        android:textSize="20sp" />

    <Button
        android:id="@+id/contract_deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="Recusar"
        android:textColor="@color/white"
        android:background="@drawable/red_btn_bg"/>

    <Button
        android:id="@+id/contract_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="41dp"
        android:layout_toStartOf="@+id/contract_deny"
        android:layout_toLeftOf="@+id/contract_deny"
        android:text="Aceitar"
        android:textColor="@color/white"
        android:background="@drawable/green_btn_bg"/>

    <TextView
        android:id="@+id/contract_benef"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contract_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/contract_accept"
        android:layout_toLeftOf="@+id/contract_accept"
        android:text="Hello" />

</RelativeLayout>
