<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/linlayMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_Calendario"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/card_android_calendario"/>

        <Button
            android:id="@+id/btn_Medicamentos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/card_android_medicamentos"/>

        <Button
            android:id="@+id/btn_Beneficiario"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_android_beneficiarios" />

        <Button
            android:id="@+id/btn_Contratos"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/card_android_contratos"/>

    </LinearLayout>
</ScrollView>
