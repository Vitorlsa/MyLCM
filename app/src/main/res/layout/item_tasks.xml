<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:descendantFocusability = "blocksDescendants"
    android:minHeight="?android:attr/listPreferredItemHeightLarge">

    <TextView
        android:id="@+id/tasksTitle"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_toStartOf="@+id/tasksDone"
        android:layout_toLeftOf="@+id/tasksDone"
        android:layout_toEndOf="@+id/taskColor"
        android:layout_toRightOf="@+id/taskColor"
        android:text="Hello"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/tasksNotDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:background="@drawable/red_btn_bg"
        android:text="NÃ£o Feito" />

    <Button
        android:id="@+id/tasksDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="41dp"
        android:layout_toStartOf="@+id/tasksNotDone"
        android:layout_toLeftOf="@+id/tasksNotDone"
        android:textColor="@color/white"
        android:background="@drawable/green_btn_bg"
        android:text="Feito" />

    <ImageButton
        android:id="@+id/imgDonenotDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="31dp"
        android:layout_marginRight="15dp"/>


    <EditText
        android:id="@+id/taskColor"
        android:layout_width="7dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:enabled="false"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/taskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Time"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>
