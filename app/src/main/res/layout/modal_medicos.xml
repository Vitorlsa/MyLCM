<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@drawable/modal_contract_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações do Médico"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/MedicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Especialidade:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Telefone do Consultório:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicPraxNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Telefone Celular:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicCelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Atende Convênio:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicConvenio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CEP:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/MedicZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:focusable="false"
                android:background="@color/transparent"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estado:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cidade:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bairro:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicNHood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rua:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Número:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Complemento:"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/MedicComplement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/MedicClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Fechar"
                android:textColor="@color/design_default_color_primary_dark"
                android:background="@drawable/btn_round"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>